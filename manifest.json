{
  "manifest_version": 3,
  "name": "QQ Browser Plugin",
  "version": "1.0",
  "description": "A QQ browser plugin that refreshes a webpage, takes a screenshot, performs OCR, and triggers audio alerts based on keywords.",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "alarms",
    "downloads",
    "notifications"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["ocr.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.js"],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}